<div class="simple_spell_form margin_bottom_1em">
  <%= simple_form_for :spells, { url: show_spells_path } do |f| %>
    <%= f.input :elements, collection: SPELL_ELEMENTS_PL, label: "Wybierz żywioł czru:" %>
    <%= f.input :krag, collection: SPELL_KRAG_ARRAY, label: "Wybierz krąg czaru:" %>
    <%= f.submit "Szukaj!", class: "btn, btn-primary" %>    
  <% end %>
</div>

<div class="advance_spell_button announcement_button float_left right_border margin_bottom_1em">
  <p><strong>Zaawansowane przeszukiwanie</strong></p>
</div>

<div class="advance_spell_form clear_float">
  <%= simple_form_for :spells, { url: show_spells_path } do |f| %>
    <%= f.input :elements, collection: SPELL_ELEMENTS_PL, as: :check_boxes, label: "Wybierz żywioł lub żywioły:" %>
    <%= f.input :krag, collection: SPELL_KRAG_ARRAY, as: :check_boxes, label: "Wybierz krąg lub kręgi czarów:" %>
    <%= f.input :tag, collection: SPELL_TAGS_PL, as: :check_boxes, label: "Wybierz tylko czary o określonym rodzaju:", include_hidden: false %>
    <%= f.submit "Szukaj!", class: "btn btn-primary" %>
  <% end %>
</div>