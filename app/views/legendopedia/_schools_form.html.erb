<div class="simple_school_form margin_bottom_1em">
  <%= form_tag show_schools_path do %>
    <p><strong>Wybierz Klan: </strong>
      <%= select_tag 'clans[]', options_for_select([
                               ["Dowolny", ""],
                               ["Feniks", 'Feniks'],
                               ["Jednorożec", 'Jednorożec'],
                               ["Krab", 'Krab'],
                               ["Lew", 'Lew'],
                               ["Modliszka", 'Modliszka'],
                               ['Pająk', 'Pająk'],
                               ['Skorpion', 'Skorpion'],
                               ['Smok', 'Smok'],
                               ['Żuraw', 'Zuraw'],
                               ['Cesarskie', 'Cesarskie'],
                               ['Pomniejsze', 'clans[Pomniejsze']]) %>
    </p>
    <p><strong>Wybierz Klasę Szkoły: </strong>
      <%= select_tag 'school_classes[]', options_for_select([
                               ["Dowolna", ""],
                               ["Bushi", 'Bushi'],
                               ["Shugenja", 'Shugenja'],
                               ["Mnich", 'Mnich'],
                               ["Artysta", 'Artysta'],
                               ["Dworzanina", 'Dworzanina'],
                               ["Ninja", 'Ninja']]) %>       
    </p>      
    <%= submit_tag "Szukaj!" %>
  <% end %>
</div>
<div class="advance_school_button announcement_button float_left right_border margin_bottom_1em">
  <p><strong>Zaawansowane przeszukiwanie</strong></p>
</div>
<div class="advance_school_form clear_float">
  <p><strong>Wybierz klan/y:</strong></p>
  <%= form_tag show_schools_path do %>
    <ul class="no_dot">
      <li class="inline_block">
        <ul class="no_dot no_padding_and_margin"> 
          <li><%= check_box_tag 'clans[]','Feniks', (true if !@clans.nil? and @clans.include? 'Feniks'), class: "clan_checkbox" %> Feniks</li>
          <li><%= check_box_tag 'clans[]','Jednorożec', (true if !@clans.nil? and @clans.include? 'Jednorożec'), class: "clan_checkbox" %> Jednorożec</li>
          <li><%= check_box_tag 'clans[]', 'Krab', (true if !@clans.nil? and @clans.include? 'Krab'), class: "clan_checkbox" %> Krab</li>
          <li><%= check_box_tag 'clans[]', 'Lew', (true if !@clans.nil? and @clans.include? 'Lew'), class: "clan_checkbox" %> Lew </li>
        </ul>
      </li>
      <li class="inline_block">
        <ul class="no_dot no_padding_and_margin">
          <li> <%= check_box_tag 'clans[]', 'Modliszka', (true if !@clans.nil? and @clans.include? 'Modliszka'), class: "clan_checkbox" %> Modliszka</li>
          <li><%= check_box_tag 'clans[]', 'Pająk', (true if !@clans.nil? and @clans.include? 'Pająk'), class: "clan_checkbox" %> Pająk</li>
          <li><%= check_box_tag 'clans[]', 'Skorpion', (true if !@clans.nil? and @clans.include? 'Skorpion'), class: "clan_checkbox" %> Skorpion</li>
          <li><%= check_box_tag 'clans[]', 'Smok', (true if !@clans.nil? and @clans.include? 'Smok'), class: "clan_checkbox" %> Smok</li>
        </ul>
      </li>
      <li class="inline_block">
        <ul class="no_dot no_padding_and_margin">
          <li><%= check_box_tag 'clans[]', 'Zuraw', (true if !@clans.nil? and @clans.include? 'Zuraw'), class: "clan_checkbox" %> Żuraw</li>
          <li><%= check_box_tag 'clans[]', 'Cesarskie', (true if !@clans.nil? and @clans.include? 'Cesarskie'), class: "clan_checkbox" %> Szkoły Cesarskie </li>
